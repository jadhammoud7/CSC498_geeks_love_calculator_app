<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/wallpaper"
        android:layout_width="413dp"
        android:layout_height="733dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hearts" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="300dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:onClick="name"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Enter Full Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_choose"
        android:layout_width="162dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Choose Language"
        android:textColor="#DFD0D0"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/dropdownlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name" />

    <Spinner
        android:id="@+id/dropdownlist"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginBottom="250dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="109dp"
        android:layout_height="103dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdownlist"
        app:srcCompat="@drawable/c" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="147dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:onClick="calculate"
        android:text="calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="87dp"
        android:layout_height="74dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="52dp"
        android:textAlignment="center"
        android:textColor="#F3ECEC"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calculate"
        app:layout_constraintEnd_toStartOf="@+id/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdownlist" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="297dp"
        android:layout_height="107dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:text="Check the Percentage of love between you and chosen language"
        android:textAlignment="center"
        android:textColor="#EDE3E3"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/full_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wallpaper" />

</androidx.constraintlayout.widget.ConstraintLayout>